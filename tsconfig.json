{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "types": [
            "node",
        ]
    },
    "include": [
        "src/server/**/*",
    ],
    "exclude": [
        "node_modules",
        "src/client",
        "public/*",
    ]
}