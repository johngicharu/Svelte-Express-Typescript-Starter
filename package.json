{
  "name": "express-svelte-template",
  "version": "0.1.0",
  "description": "Template for building basic applications with Express backend and Svelte frontend.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy": "cpx src/frontend/public/**/* dist/public",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc copy",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts --exec npm run dev:start",
    "start": "node .",
    "build:frontend": "rollup -c",
    "dev:frontend": "rollup -c -w",
    "start:frontend": "sirv dist/public",
    "dev:live": "cross-env APP_ENV=development concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "prod": "npm-run-all build build:frontend",
    "prod:start": "cross-env APP_ENV=production node dist",
    "prod:live": "npm-run-all prod prod:start",
    "svelte-check": "svelte-check --tsconfig ./src/frontend/tsconfig.json"
  },
  "keywords": [],
  "author": "johngicharu",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "sirv-cli": "^1.0.14"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@tsconfig/svelte": "^2.0.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^16.7.10",
    "autoprefixer": "^10.3.3",
    "concurrently": "^6.2.1",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "install": "^0.13.0",
    "nodemon": "^2.0.12",
    "npm": "^7.22.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.42.4",
    "svelte-check": "^2.2.5",
    "svelte-preprocess": "^4.8.0",
    "tailwindcss": "^2.2.9",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
